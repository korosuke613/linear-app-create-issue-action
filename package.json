{
  "name": "linear-app-create-issue-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to create an Issue for Linear.app.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "build-package": "npm-run-all -l -s build package",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage",
    "check": "npm-run-all -s build -p test:ci lint",
    "release": "shipjs prepare",
    "test-lint": "npm-run-all -l -p test:ci lint",
    "prerelease": "npm-run-all -l -p build-package test-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "linear-app"
  ],
  "author": "Futa Hirakoba",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@linear/sdk": "^1.13.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "@types/yaml-front-matter": "^4.1.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.26.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-junit": "^12.0.0",
    "js-yaml": "^4.1.0",
    "nock": "^13.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "shipjs": "^0.23.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
